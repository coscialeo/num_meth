&control
   calculation			= 'vc-relax'
   restart_mode			= 'from_scratch'
   pseudo_dir			= '../pseudo/'
   outdir			= './relax_out/'
   prefix			= 'bi_relax'
   etot_conv_thr		= 1e-5
   forc_conv_thr		= 1e-4
/

&system
   ibrav			= 4
   celldm(1)			= 8.2198
   celldm(3)			= 5.0
   nat				= 2
   ntyp				= 1
   noncolin			= .true.
   lspinorb			= .true.
   starting_magnetization	= 0.01
   ecutwfc			= 50
   ecutrho			= 200
   occupations			= 'fixed'
/

&electrons
   diagonalization		= 'david'
   conv_thr			= 1.0e-8
   mixing_beta			= 0.3
   startingpot			= 'file'
   startingwfc			= 'file'
/

&ions
/

&cell
   cell_dofree			= 'ibrav+2Dxy'
/

